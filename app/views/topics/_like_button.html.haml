- liked = user_signed_in? && topic.liked_by?(current_user)
.d-flex.align-items-center.gap-1
  - if user_signed_in?
    - if liked
      = button_to topic_like_path(topic),
                  method: :delete,
                  class: "p-0 border-0 bg-transparent text-danger",
                  form: { data: { turbo: false } } do
        %i.bi.bi-heart-fill.text-danger
      %span= topic.likes.count
    - else
      = button_to topic_like_path(topic),
                  method: :post,
                  class: "p-0 border-0 bg-transparent text-muted",
                  form: { data: { turbo: false } } do
        %i.bi.bi-heart.text-muted
      %span= topic.likes.count
  - else
    %i.bi.bi-heart.text-muted
    %span= topic.likes.count
