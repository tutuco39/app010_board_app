<div class="card border-0 shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <h3 class="card-title mb-0"><%= @topic.title %></h3>
      <small class="text-muted"><%= @topic.created_at.strftime("%Y-%m-%d %H:%M") %></small>
    </div>
    <div class="text-muted mb-2">by <%= @topic.user.email %></div>

    <div class="mt-3">
      <%= simple_format @topic.body %>
    </div>

    <% if @topic.image.attached? %>
      <div class="mt-3">
        <%= image_tag @topic.image.variant(resize_to_limit: [1200, 1200]),
              class:"img-fluid rounded" %>
      </div>
    <% end %>

    <% if user_signed_in? && @topic.user == current_user %>
      <div class="mt-3 d-flex gap-2">
        <%= link_to "Edit", edit_topic_path(@topic), class:"btn btn-warning" %>
        <%= button_to "Delete", @topic, method: :delete,
              class:"btn btn-outline-danger",
              form: { data: { turbo_confirm: "Delete this topic?" } } %>
      </div>
    <% end %>
  </div>
</div>

<h4 class="mb-3">Comments (<%= @comments.size %>)</h4>

<div class="vstack gap-3 mb-4">
  <% @comments.each do |c| %>
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div class="text-muted small"><%= c.user.email %></div>
          <div class="text-muted small"><%= c.created_at.strftime("%Y-%m-%d %H:%M") %></div>
        </div>
        <div class="mt-2"><%= simple_format c.body %></div>

        <div id="<%= dom_id(@topic, :like_area) %>" class="mt-3">
          <%= render "topics/like_button", topic: @topic %>
        </div>

        <% if user_signed_in? && c.user == current_user %>
          <div class="mt-2">
            <%= button_to "Delete", topic_comment_path(@topic, c),
                  method: :delete, class:"btn btn-outline-danger btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="card border-0 shadow-sm">
    <div class="card-body">
      <%= form_with model: [@topic, @comment], local: true do |f| %>
        <div class="mb-2">
          <%= f.text_area :body, rows: 4, class:"form-control",
                placeholder:"Write a comment..." %>
        </div>
        <%= f.submit "Post comment", class:"btn btn-warning" %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="alert alert-light border">Please log in to comment.</div>
<% end %>
